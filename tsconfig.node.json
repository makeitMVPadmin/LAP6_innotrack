{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ESNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "composite": true // this is not automatically added
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  